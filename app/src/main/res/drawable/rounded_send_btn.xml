<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient android:angle="270" android:centerColor="#5A6A9F" android:centerY="0.2" android:endColor="@color/blue" android:startColor="#828EB8" />

            <corners
                android:radius="15dp" />
            <corners android:radius="25dp" />
            <size
                android:width="30dp"
                android:height="30dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <gradient
                android:centerY="0.5"
                android:startColor="@color/blue_ultra_light"
                android:centerColor="@color/blue_light"
                android:endColor="@color/blue_dark"
                android:angle="270"
                />
            <corners
                android:radius="15dp" />
            <corners android:radius="25dp" />
            <size
                android:width="30dp"
                android:height="30dp" />
        </shape>
    </item>
    <item>
        <shape android:layout_height="wrap_content" android:shape="oval">
            <gradient
                android:centerY="0.2"
                android:startColor="@color/blue_ultra_light"
                android:centerColor="@color/blue_light"
                android:endColor="@color/blue_dark"
                android:angle="270"
                />
            <corners android:radius="15dp" />
            <corners android:radius="25dp" />
            <size android:width="30dp" android:height="30dp" />
        </shape>
    </item>
</selector>